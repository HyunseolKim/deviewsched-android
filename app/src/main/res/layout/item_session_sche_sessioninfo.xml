<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_listitem_height_72dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <TextView
            android:id="@+id/item_session_sche_sessioninfo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="8dp"
            android:text="10:00~10:45"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <LinearLayout
            android:id="@+id/item_session_sche_sessioninfo_speaker_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_session_sche_sessioninfo_speaker_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/material_icon_paddingleft_16dp"
                android:src="@drawable/ic_account_circle_black_36dp" />

            <ImageView
                android:id="@+id/item_session_sche_sessioninfo_speaker_img_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/material_icon_paddingleft_16dp"
                android:src="@drawable/ic_account_circle_black_36dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/item_session_sche_sessioninfo_speaker_img_layout"
            android:orientation="vertical"
            android:paddingLeft="@dimen/material_icon_paddingleft_16dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/item_session_sche_sessioninfo_session_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="행복한 프로그래머"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_session_sche_sessioninfo_speaker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="유석문"
                android:textColor="#000000"
                android:textSize="10sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
