<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:baselineAligned="false"
    android:layout_height="50dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <com.gdgssu.android_deviewsched.ui.particleview.DeviewTextView
            android:id="@+id/item_sche_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:fontName="NanumBarunGothic.ttf"
            android:text="10:00 ~ 10:45"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/item_sche_list_speaker_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_account_circle_white_24dp"/>

            <com.gdgssu.android_deviewsched.ui.particleview.DeviewTextView
                android:id="@+id/item_sche_list_speaker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:fontName="NanumBarunGothic.ttf"
                android:text="유석문"/>

        </LinearLayout>

        <com.gdgssu.android_deviewsched.ui.particleview.DeviewTextView
            android:id="@+id/item_sche_list_session_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:layout_centerVertical="true"
            app:fontName="NanumBarunGothic.ttf"
            android:textSize="15sp"
            android:text="행복한 프로그래머"/>
    </RelativeLayout>

</LinearLayout>
